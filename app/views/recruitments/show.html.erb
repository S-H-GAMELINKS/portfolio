<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recruitment.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @recruitment.category %>
</p>

<p>
  <strong>Content:</strong>
  <%= sanitize @recruitment.content, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img table tr td em br strong div), attributes: %w(id class href) %>
</p>

<p>
  <strong>User:</strong>
  <%= @recruitment.user_id %>
</p>



<h2>Comments</h2>
  <div id="comments">
    <%= render @recruitment.comments %>
  </div>

<%= render 'comments/new', recruitment: @recruitment %>

<%= link_to 'Edit', edit_recruitment_path(@recruitment) %> |
<%= link_to 'Back', recruitments_path %>
